                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Legen的小工具", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("关于", "About", "Home")</li>*@
                    <li>@Html.ActionLink("云数据库管理", "index", "SQL")</li>
                    <li>@Html.ActionLink("游戏", "index", "Game")</li>
                    @*<li>@Html.ActionLink("算法", "index", "Algorithm")</li>*@
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                </ul>
